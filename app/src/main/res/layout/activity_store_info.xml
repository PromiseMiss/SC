<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_activity"
    android:orientation="vertical">

    <include layout="@layout/base_head_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_only_height"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="107dp"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/layout_distance"
                    android:text="店铺名称"
                    android:textColor="@color/font_base_color"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/etStoreName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="店铺名称"
                    android:maxLength="30"
                    android:maxLines="1"
                    android:paddingLeft="3dp"
                    android:singleLine="true"
                    android:textColor="@color/font_base_color"
                    android:textColorHint="@color/font_base_color_"
                    android:textSize="14sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_color" />

            <View
                android:layout_width="match_parent"
                android:layout_height="7dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="162dp"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layout_only_height"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="107dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/layout_distance"
                        android:text="电话"
                        android:textColor="@color/font_base_color"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/etTel"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="0240000000"
                        android:inputType="number"
                        android:maxLength="11"
                        android:maxLines="1"
                        android:paddingLeft="3dp"
                        android:singleLine="true"
                        android:textColor="@color/activity_font_color"
                        android:textColorHint="@color/font_base_color_"
                        android:textSize="14sp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/line_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layout_only_height"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="107dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/layout_distance"
                        android:text="姓名"
                        android:textColor="@color/font_base_color"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/etName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="请输入姓名"
                        android:maxLength="10"
                        android:paddingLeft="3dp"
                        android:textColor="@color/activity_font_color"
                        android:textColorHint="@color/font_base_color_"
                        android:textSize="14sp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/line_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layout_only_height"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="107dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/layout_distance"
                        android:text="店铺地址"
                        android:textColor="@color/font_base_color"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvLocation"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:drawableRight="@drawable/my_icon_back"
                        android:gravity="center_vertical"
                        android:hint="请选择"
                        android:maxLines="1"
                        android:paddingLeft="3dp"
                        android:paddingRight="10dp"
                        android:singleLine="true"
                        android:textColor="@color/activity_font_color"
                        android:textColorHint="@color/font_base_color_"
                        android:textSize="14sp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/line_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/etAddressDetail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:hint="请输入详细地址"
                        android:maxLines="1"
                        android:paddingLeft="110dp"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/font_base_color_"
                        android:textColorHint="@color/font_base_color_"
                        android:textSize="14sp" />

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_color" />

            <View
                android:layout_width="match_parent"
                android:layout_height="7dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_only_height"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="107dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/layout_distance"
                    android:text="身份证号码"
                    android:textColor="@color/font_base_color"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/etID"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="身份证号"
                    android:paddingLeft="3dp"
                    android:textColor="@color/activity_font_color"
                    android:textColorHint="@color/font_base_color_"
                    android:textSize="14sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_only_height"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="107dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/layout_distance"
                    android:text="营业执照编号"
                    android:textColor="@color/font_base_color"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/etLicense"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="营业执照编号"
                    android:inputType="number"
                    android:maxLength="30"
                    android:paddingLeft="3dp"
                    android:textColor="@color/activity_font_color"
                    android:textColorHint="@color/font_base_color_"
                    android:textSize="14sp" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_only_height"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/layout_distance"
                    android:text="营业执照照片"
                    android:textColor="@color/font_base_color"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvDel"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/layout_distance"
                    android:paddingRight="@dimen/layout_distance"
                    android:text="删除"
                    android:textColor="@color/font_base_color" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="217dp"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/iv"
                    android:layout_width="208.33dp"
                    android:layout_height="182.33dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@color/activity_title_bg"
                    android:scaleType="center"
                    android:src="@drawable/icon_add_photos" />
            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_color" />

            <Button
                android:id="@+id/btnRegStore"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="23.33dp"
                android:layout_marginLeft="@dimen/layout_distance"
                android:layout_marginRight="@dimen/layout_distance"
                android:layout_marginTop="23.33dp"
                android:background="@drawable/button_selector_corners"
                android:text="注册店铺"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
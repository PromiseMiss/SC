<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_activity"
    android:orientation="vertical">

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="177dp"
        android:layout_height="254dp">

        <ImageView
            android:id="@+id/ivCommodity"
            android:layout_width="177dp"
            android:layout_height="177dp"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/tvTit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivCommodity"
            android:layout_marginLeft="@dimen/layout_distance"
            android:layout_marginTop="11dp"
            android:text=""
            android:textColor="@color/activity_font_color"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tvSynopsis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTit"
            android:layout_marginLeft="@dimen/layout_distance"
            android:text=""
            android:textColor="@color/font_base_color"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvSynopsis"
            android:layout_marginLeft="@dimen/layout_distance"
            android:text=""
            android:textSize="12sp"
            android:textColor="@color/money_font" />

        <TextView
            android:id="@+id/tvInventory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tvPrice"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="@dimen/layout_distance"
            android:text=""
            android:textColor="@color/font_base_color_"
            android:textSize="12sp" />
    </RelativeLayout>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:background="@color/white"
        android:padding="10dp">

        <ImageView
            android:id="@+id/ivShopIcon"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:src="@drawable/demo_head_icon" />

        <TextView
            android:id="@+id/tvShopName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@+id/ivShopIcon"
            android:layout_toRightOf="@+id/ivShopIcon"
            android:text="橄榄油"
            android:textColor="@color/activity_font_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tvShopName"
            android:layout_alignStart="@+id/tvShopName"
            android:layout_centerVertical="true"
            android:text="商品详情，商品说明"
            android:textColor="@color/font_base_color" />

        <TextView
            android:id="@+id/tvShopMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tvDetail"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/tvDetail"
            android:text="￥88"
            android:textColor="@color/money_font"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvShopNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tvShopMoney"
            android:layout_alignBottom="@+id/tvShopMoney"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:text="x10"
            android:textColor="@color/font_base_color_" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_color" />


</LinearLayout>
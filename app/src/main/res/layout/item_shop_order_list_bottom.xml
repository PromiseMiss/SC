<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="29dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="运费:"
            android:textColor="@color/gray_font" />

        <TextView
            android:id="@+id/tvFreight"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/layout_distance"
            android:text="￥44"
            android:textColor="@color/font_base_color" />

        <TextView
            android:id="@+id/tvAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="合计:"
            android:textColor="@color/gray_font" />

        <TextView
            android:id="@+id/tvShopMoneyNum"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="@dimen/layout_distance"
            android:text="￥44"
            android:textColor="@color/money_font"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:background="@color/white"
        android:gravity="right|center"
        android:orientation="horizontal"
        >

        <Button
            android:layout_width="73dp"
            android:layout_height="27dp"
            android:background="@drawable/btn_order_corners"
            android:text="取消订单"
            android:textColor="@color/font_base_color" />

        <Button
            android:layout_width="73dp"
            android:layout_height="27dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="@dimen/layout_distance"
            android:background="@drawable/btn_order_corners"
            android:text="付款"
            android:textColor="@color/font_base_color" />

    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_activity"
    android:orientation="vertical">
    <!--充值-->

    <include layout="@layout/base_head_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_only_height"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="@dimen/layout_distance"
            android:text="充值账户"
            android:textColor="@color/activity_font_color"
            android:textSize="14sp" />

        <TextView
            android:textSize="14sp"
            android:id="@+id/tvTopUpAccount"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="31dp"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/activity_font_color" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_color" />

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="178dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llTopUpStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_only_height"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/layout_distance"
                android:text="充值方式"
                android:textColor="@color/activity_font_color" />

            <TextView
                android:textSize="14sp"
                android:id="@+id/tvTopUpMode"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="31dp"
                android:drawableRight="@drawable/my_icon_back"
                android:gravity="center_vertical"
                android:paddingRight="@dimen/layout_distance"
                android:text="微信"
                android:textColor="@color/check_font_color" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_only_height"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/layout_distance"
                android:text="充值金额"
                android:textColor="@color/activity_font_color" />

            <EditText
                android:textSize="14sp"
                android:id="@+id/et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="31dp"
                android:gravity="center_vertical"
                android:text="2000.00"
                android:textColor="@color/activity_font_color" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_color" />
        <HorizontalScrollView
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:id="@+id/llActivity"
                android:gravity="center"
                android:orientation="horizontal">




            </LinearLayout>
        </HorizontalScrollView>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_color" />

    <Button
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:id="@+id/btnTopUp"
        android:layout_width="340dp"
        android:layout_height="@dimen/layout_only_height"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/button_selector_corners"
        android:text="充值" />


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/homeTitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/main_activity_bottom_bar_bg"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvLocation"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/home_index_icon_location"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/layout_distance"
            android:paddingRight="@dimen/layout_distance"
            android:text="@string/home_index_shenyang"
            android:textColor="@color/check_font_color"
            android:textSize="@dimen/text_size_et" />

        <ImageView
            android:id="@+id/ivMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/layout_distance_two"
            android:src="@drawable/home_index_icon_information" />

        <EditText
            android:id="@+id/etSearch"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/ivMessage"
            android:layout_toRightOf="@id/tvLocation"
            android:background="@drawable/home_index_rounded_edit_text"
            android:drawableLeft="@drawable/home_index_icon_search"
            android:drawablePadding="6dp"
            android:gravity="center"
            android:hint="@string/home_index_top_search"
            android:paddingLeft="@dimen/layout_distance"
            android:paddingRight="@dimen/layout_distance"
            android:singleLine="true"
            android:textColor="@color/main_activity_exit_font_color"
            android:textColorHint="@color/main_activity_exit_font_color"
            android:textSize="@dimen/text_size_et" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/line_color" />
    </RelativeLayout>
</LinearLayout>
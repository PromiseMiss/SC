<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_activity"
    android:orientation="vertical">
    <!--收款-->
    <include layout="@layout/base_head_title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvMoneyNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="62dp"
            android:text="￥"
            android:textColor="@color/check_font_color"
            android:textSize="17sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnReceipt"
            android:layout_width="340dp"
            android:layout_height="@dimen/layout_only_height"
            android:layout_below="@+id/tvMoneyNum"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_marginTop="68dp"
            android:background="@drawable/button_selector_corners"
            android:text="收款" />
    </RelativeLayout>


</LinearLayout>
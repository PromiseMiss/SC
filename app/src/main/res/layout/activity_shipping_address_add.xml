<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_activity"
    android:orientation="vertical">

    <!--收货地址页-->

    <include layout="@layout/base_head_title" />

    <View
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:background="@color/line_color" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_only_height"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/layout_distance">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/layout_only_height"
            android:gravity="center_vertical"
            android:text="@string/consignee"
            android:textColor="@color/font_base_color"
            android:textSize="@dimen/textSize" />

        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/layout_only_height"
            android:textColor="@color/activity_font_color"
            android:textSize="@dimen/textSize" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_only_height"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/layout_distance">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/layout_only_height"
            android:gravity="center_vertical"
            android:text="@string/phone_number"
            android:textColor="@color/font_base_color"
            android:textSize="@dimen/textSize" />

        <EditText
            android:id="@+id/etPhone"
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/layout_only_height"
            android:textColor="@color/activity_font_color"
            android:textSize="@dimen/textSize" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_only_height"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/layout_distance"
        android:paddingRight="@dimen/layout_distance">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/layout_only_height"
            android:gravity="center_vertical"
            android:text="@string/location"
            android:textColor="@color/font_base_color"
            android:textSize="@dimen/textSize" />

        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_button_white_rt"
            android:drawableRight="@drawable/my_icon_back"
            android:gravity="center_vertical"
            android:paddingLeft="25dp"
            android:paddingRight="@dimen/layout_distance"
            android:textColor="@color/activity_font_color"
            android:textSize="@dimen/textSize" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_only_height"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/layout_distance"
        android:paddingRight="@dimen/layout_distance">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/layout_only_height"
            android:gravity="center_vertical"
            android:text="@string/detail_location"
            android:textColor="@color/font_base_color"
            android:textSize="@dimen/textSize" />

        <EditText
            android:id="@+id/etAddressDetail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="center_vertical"
            android:paddingLeft="25dp"
            android:paddingRight="@dimen/layout_distance"
            android:textColor="@color/activity_font_color"
            android:textSize="@dimen/textSize" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_color" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_distance_one"
        android:background="@color/bg_activity" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_color" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_only_height"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="@dimen/layout_distance"
        android:paddingRight="@dimen/layout_distance">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:text="@string/set_default_location"
            android:textColor="@color/gray_font"
            android:textSize="@dimen/textSize" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="@string/everyone_use"
            android:textColor="@color/font_base_color_"
            android:textSize="10sp" />

        <!--<ImageView-->
        <!--android:id="@+id/ivDefaultState"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:layout_marginEnd="10dp"-->
        <!--android:layout_marginRight="10dp"-->
        <!--android:src="@drawable/icon_default_on"-->
        <!--android:visibility="gone" />-->

        <ToggleButton
            android:id="@+id/toggle"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@color/white"
            style="@style/MyToggleButton"
            android:checked="true"
            android:gravity="center_vertical|right"
            android:textOff=""
            android:textOn="" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_color" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llTitle"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:background="@color/line_bg"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/layout_distance"
            android:text="2017年8"
            android:textColor="@color/font_base_color"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="@dimen/layout_distance"
            android:drawableRight="@drawable/my_icon_back"
            android:gravity="center_vertical|right"
            android:paddingRight="10dp"
            android:text="月账单"
            android:textColor="@color/font_base_color_"
            android:textSize="12sp" />

    </LinearLayout>

</LinearLayout>
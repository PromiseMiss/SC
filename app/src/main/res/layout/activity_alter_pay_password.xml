<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_activity"
    android:orientation="vertical">


    <include layout="@layout/base_head_title" />

    <View
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:background="@color/bg_activity" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_all_height"
        android:layout_gravity="center_horizontal"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:paddingLeft="@dimen/layout_distance_two">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_only_height"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="原密码"
                android:textColor="@color/font_base_color" />

            <EditText
                android:id="@+id/etOldPW"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_only_height"
                android:background="@null"
                android:maxLength="6"
                android:hint="您的原密码"
                android:paddingLeft="22dp"
                android:inputType="numberPassword"
                android:textColor="@color/activity_font_color"
                android:textColorHint="@color/font_base_color_"
                android:textSize="@dimen/text_size_et" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_only_height"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新密码"
                android:textColor="@color/font_base_color" />

            <EditText
                android:id="@+id/etNewPW"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_only_height"
                android:background="@null"
                android:maxLength="6"
                android:hint="您的新密码"
                android:inputType="numberPassword"
                android:paddingLeft="22dp"
                android:textColor="@color/activity_font_color"
                android:textColorHint="@color/font_base_color_"
                android:textSize="@dimen/text_size_et" />


        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_color" />

    <Button
        android:id="@+id/btnAffirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_only_height"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="@dimen/layout_distance"
        android:layout_marginRight="@dimen/layout_distance"
        android:layout_marginTop="@dimen/layout_distance_four"
        android:background="@drawable/login_btn_bg"
        android:text="重置"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvForgetPW"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40dp"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/back_versa_icon"
            android:text="忘记密码"
            android:textColor="@color/check_font_color"
            android:textSize="15sp" />
    </RelativeLayout>
</LinearLayout>